<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/mainColor</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/enter_slide_up
        </item>
        <item name="android:windowExitAnimation">
            @anim/exit_slide_down
        </item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_selector</item>
        <item name="hintTextColor">@color/edit_text_selector</item>
    </style>

    <style name="modeAlert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/buttonSecAlert1</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonSecAlert2</item>
    </style>

    <style name="buttonSecAlert1" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/buttonSecOverlay1</item>
    </style>

    <style name="buttonSecOverlay1" parent="">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="buttonSecAlert2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/buttonSecOverlay2</item>
    </style>

    <style name="buttonSecOverlay2" parent="">
        <item name="colorPrimary">@color/red</item>
    </style>

</resources>