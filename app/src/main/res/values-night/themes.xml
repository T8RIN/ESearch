<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ESearch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">#1A1A1A</item>
        <item name="colorPrimary">#171717</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="fontFamily">@font/comfortaa_medium</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dgreen</item>
        <item name="colorSecondaryVariant">@color/ddgreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mainColor">#00D00A</item>

        <item name="materialAlertDialogTheme">@style/modeAlert</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="Theme.ESearch.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>
</resources>